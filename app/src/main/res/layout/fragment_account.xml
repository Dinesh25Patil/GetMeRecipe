<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".account"
    android:id="@+id/account_page">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >




    <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name"
                        android:textSize="25sp"
                        android:fontFamily="@font/sbold"
                        android:padding="5dp"
                        android:textColor="@color/darkblack"/>

                    <TextView
                        android:id="@+id/account_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Dinesh Patil"
                        android:textSize="20sp"
                        android:fontFamily="@font/sregular"
                        android:padding="5dp"
                        android:textStyle="italic"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textSize="25sp"
                        android:fontFamily="@font/sbold"
                        android:padding="5dp"
                        android:textColor="@color/darkblack"/>

                    <TextView
                        android:id="@+id/account_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="dp256080@gmail.com"
                        android:textSize="20sp"
                        android:fontFamily="@font/sregular"
                        android:padding="5dp"
                        android:textStyle="italic"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textSize="25sp"
                        android:fontFamily="@font/sbold"
                        android:padding="5dp"
                        android:textColor="@color/darkblack"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7021470342"
                        android:id="@+id/account_phone"
                        android:textStyle="italic"
                        android:textSize="20sp"
                        android:fontFamily="@font/sregular"
                        android:padding="5dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:backgroundTint="#E07C19"
                    android:textSize="18sp"
                    android:text="Logout"
                    android:fontFamily="@font/smedium"
                    android:id="@+id/account_lgout"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>

</RelativeLayout>